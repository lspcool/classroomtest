<div class="d-flex flex-md-row flex-items-center classroom-resource-item">
  <div class="col-1 d-flexp">
    <span class="assignment-icon assignment-icon-individual left">
      <%= octicon 'person', height: 22 %>
    </span>
  </div>

  <div class="col-10 col-md-10 d-flex flex-column">
    <%= link_to stafftools_repo_access_path(repo_access.id) do %>
      <strong class="search-result-title">@<%= t('views.stafftools.repo_accesses.repo_access_info', user_login: repo_access.user.github_user.login, organization_login: repo_access.organization.github_organization.login) %></strong>
    <% end %>

    <span class="text-gray css-truncate css-truncate-target"><%= t('views.stafftools.repo_accesses.created') %> <%= local_time_ago(repo_access.created_at) %></span>
  </div>
</div>
